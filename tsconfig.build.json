{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2017",
    "module": "CommonJS",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/build.tsbuildinfo",
    "removeComments": false,
    "plugins": [
      {
        "transform": "../tracing-plugin/src/index.ts",
        "pipe": true,
        "flow": true,
        "tracing": false,
        "identity": true,
        "dataFirst": true
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["test", "node_modules"]
}
